# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/local

DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=10

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
EMAIL_FROM=no-reply@leaktrak.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=15

# Test Rate Limiting (smaller window and lower limit for testing)
TEST_RATE_LIMIT_WINDOW_MS=60000
TEST_RATE_LIMIT_MAX=3

# SonarQube Configuration
SONAR_SERVER_URL=http://localhost:9000
SONAR_TOKEN=your_sonar_token_here

# SonarQube Login Configuration
SONAR_LOGIN=
SONAR_PASSWORD=
